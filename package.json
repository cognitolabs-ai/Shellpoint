{
  "name": "shellpoint",
  "version": "1.3.0",
  "description": "Professional web-based SSH client with modern UI and advanced features",
  "main": "server.js",
  "author": "CognitioLabs <info@cognitiolabs.eu>",
  "homepage": "https://cognitiolabs.eu",
  "repository": {
    "type": "git",
    "url": "https://github.com/cognitiolabs/shellpoint.git"
  },
  "license": "MIT",
  "keywords": [
    "ssh",
    "terminal",
    "web-terminal",
    "ssh-client",
    "xterm",
    "remote-access"
  ],
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo 'No tests specified' && exit 0",
    "lint": "echo 'No linting specified' && exit 0",
    "audit": "npm audit --audit-level=moderate",
    "security-check": "npm audit && npm audit --json",
    "build": "echo 'No build step required for Node.js app'",
    "docker:build": "docker build -t shellpoint:test .",
    "docker:test": "docker run --rm -e JWT_SECRET=test-key -p 8080:8080 shellpoint:test",
    "docker:prod": "docker build -f Dockerfile -t cognitiolabs/shellpoint:latest .",
    "version-check": "node -e \"console.log(require('./package.json').version)\"",
    "health-check": "curl -f http://localhost:8080/health || exit 1",
    "pre-deploy": "npm audit && npm run health-check",
    "start:prod": "NODE_ENV=production node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "ssh2": "^1.15.0",
    "better-sqlite3": "^9.2.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}